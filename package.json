{
  "name": "poe-item-search",
  "version": "1.2.0",
  "description": "Paste your item on PoE Trade website and start searching for it!",
  "main": "dist/content.js",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:watch": "vite build --watch --mode production",
    "build": "vite build --mode production",
    "build:legacy": "bun build src/content.js --outdir=dist --no-minify --target=browser",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "bun test",
    "package": "bun run build && bun scripts/package.js",
    "update-stats": "bun scripts/fetch-stats.js",
    "typecheck": "tsc --noEmit"
  },
  "author": "Daniel Griesser",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@types/chrome": "^0.0.287",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.4",
    "@vitejs/plugin-react": "^4.3.4",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  }
}
